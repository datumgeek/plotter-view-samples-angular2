{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ]
}